{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["./"]
        }
      }
    },
    "rules": {
      "comma-dangle": 0,
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "import/prefer-default-export": 0,
      "max-classes-per-file": 0,
      "no-nested-ternary": 0,
      "no-console": 0
    }
}
